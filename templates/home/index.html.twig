{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
    <p class="title">Accueil</p>

    {% if app.user %}
        <p>Vous êtes connectés</p>
        <p>Adresse email : {{ app.user.email }}</p>
        <a href={{ path('app_logout') }}>Se déconnecter</a>
        <a href={{ path('app_article') }}>Ajouter un article</a>

        {% for article in articles %}
            <p><b>{{ article.id }}</b> - {{ article.titre }} / posté par {{ article.user.email }}</p>
            <a href="{{ path('article_delete', {id: article.id}) }}">Supprimer</a>
        {% endfor %}

        {% else %}
            <a href={{ path('app_register') }}>S'inscrire</a>
            <a href={{ path('app_login') }}>Se connecter</a>
    {% endif %}

{% endblock %}
